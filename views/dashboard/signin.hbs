{{> partials/dashboard/header }}

<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> {{pageTitle}}</h1>

        {{> partials/alertMessages}}

        <div class="card card-body">
            <form action="/dashboard" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="name" id="name" name="name" class="form-control" placeholder="Enter your name" required />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter Password" required />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
            </form>
            <p class="lead mt-4">
                No Account? <a href="/dashboard/signup">Sign Up</a>
            </p>
        </div>
    </div>
</div>

{{> partials/dashboard/footer}}