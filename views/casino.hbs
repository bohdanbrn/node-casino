{{> partials/header }}

<main>
    <section class="container">
        {{> partials/alertMessages }}
        <div class="row py-5">
            <div class="col-12 my-auto">
                {{#if pageTitle}}
                    <h1 class="display-4 mb-3 text-center">{{pageTitle}}</h1>
                {{/if}}
                <div class="row text-center">
                    {{#if error}}
                        {{> partials/error }}
                    {{else if casino}}
                        {{#each casino.GameMachines}}
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card h-100 copyable">
                                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                        <div class="mb-2 text-primary casino-icon-item"><span class="game-machine-icon"></span></div>
                                        <h4 class="card-title text-primary">Machine â„–{{this.id}}</h4>
                                        <div>Balance: {{this.money}} $</div>
                                        <div>Active: {{this.active}}</div>

                                        <a href="/casinos/{{this.CasinoId}}/{{this.id}}" class="btn btn-primary mt-2 copyable {{#if this.active}}disabled{{/if}}">Select</a>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    {{/if}}
                </div>
            </div>
        </div>
    </section>
</main>

{{> partials/footer }}