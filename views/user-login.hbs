{{> partials/header }}

<main class="vh-100 d-flex align-items-center">
    <section id="forms" class="container pb-5">
        <div class="row">
            <div class="col-md-12">
                <h1 class="display-3 mb-3 text-center">Sign in</h1>
                <form role="form" action="/casinos" id="casino-login-form">
                    <div class="form-group row was-validated copyable">
                        <label class="col-lg-1 col-form-label form-control-label text-muted">Username:</label>
                        <div class="col-lg-10">
                            <input id="username" class="form-control" type="text" name="username" required="">
                        </div>
                    </div>
                    <div class="form-group row was-validated copyable">
                        <label class="col-lg-1 col-form-label form-control-label text-muted">Money:</label>
                        <div class="col-lg-10">
                            <input id="usermoney" class="form-control" type="number" name="usermoney" step="0.01" required="">
                        </div>
                    </div>
                    <div class="form-group row copyable">
                        <label class="col-lg-2 col-form-label form-control-label"></label>
                        <div class="col-lg-9 text-right">
                            <input type="submit" class="btn btn-primary copyable" value="Play">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>

{{> partials/footer }}