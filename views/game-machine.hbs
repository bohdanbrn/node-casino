{{> partials/header }}

<main>
    <section class="container">
        {{> partials/alertMessages }}
        <div class="row py-5">
            <div class="col-12 my-auto">
                {{#if pageTitle}}
                    <h1 class="display-4 mb-3 text-center">{{pageTitle}}</h1>
                {{/if}}
                <div class="row text-center">
                    {{#if error}}
                        {{> partials/error }}
                    {{else if gMachine}}
                        <div class="col-lg-12 col-md-10 mb-4">
                            <div class="card h-100 copyable">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                    <div class="mb-2 text-primary casino-icon-item"><span class="game-machine-icon"></span></div>
                                    <div class="mb-2">
                                        <h4 class="text-primary">Machine â„–{{gMachine.id}}</h4>
                                        <div>Balance: {{gMachine.money}} $</div>
                                        <div>Active: {{gMachine.active}}</div>
                                    </div>

                                    <form method="POST" action="/casinos/{{gMachine.CasinoId}}/{{gMachine.id}}">
                                        <input id="usermoney" class="form-control" type="number" name="gameMoney" step="0.01" required="">
                                        <button type="submit" class="btn btn-primary mt-2 copyable">Play</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </section>
</main>

{{> partials/footer }}